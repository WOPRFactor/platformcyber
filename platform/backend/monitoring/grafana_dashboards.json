{
  "dashboard": {
    "title": "Cybersecurity Platform - System Metrics",
    "tags": ["cybersecurity", "pentesting", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests per Second",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Scans",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(scans_active)",
            "legendFormat": "Active Scans"
          }
        ]
      },
      {
        "id": 4,
        "title": "Total Vulnerabilities Found",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(vulnerabilities_found_total)",
            "legendFormat": "Total Vulnerabilities"
          }
        ]
      },
      {
        "id": 5,
        "title": "Celery Tasks Active",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(celery_tasks_active)",
            "legendFormat": "Active Tasks"
          }
        ]
      },
      {
        "id": 6,
        "title": "WebSocket Connections",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "websocket_connections_total",
            "legendFormat": "Connections"
          }
        ]
      },
      {
        "id": 7,
        "title": "Vulnerabilities by Severity",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (severity) (vulnerabilities_found_total)",
            "legendFormat": "{{severity}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Celery Task Success Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(celery_tasks_total{status=\"success\"}[5m]) / rate(celery_tasks_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ]
      },
      {
        "id": 9,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ]
      },
      {
        "id": 10,
        "title": "Scan Duration by Type",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(scans_duration_seconds_bucket[5m]))",
            "legendFormat": "{{scan_type}} (p95)"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}

