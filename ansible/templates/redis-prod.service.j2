[Unit]
Description=Redis Server for PROD Environment
After=network.target

[Service]
Type=notify
ExecStart=/usr/bin/redis-server /etc/redis/redis-prod.conf
ExecStop=/usr/bin/redis-cli -p {{ redis_port }} shutdown
Restart=always
User=redis
Group=redis
RuntimeDirectory=redis
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target

